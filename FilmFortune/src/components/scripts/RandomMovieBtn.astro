      } else {
        posterEl.src = "";
        posterEl.alt = "No poster";
      } 

      */
      if (movie.backdrop_path) {
        backdropEl.style.backgroundImage = `url(${originalUrl + movie.backdrop_path})`;
      } else {
        backdropEl.style.backgroundImage = "";
      } 
    } catch (err) {
      console.error(err);
      alert("Failed to get a random movie");
    }
    btn.disabled = false;
