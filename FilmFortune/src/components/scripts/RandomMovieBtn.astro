      const res = await fetch("/api/random-movie");
      const movie = await res.json();
      console.log(movie);

      titleEl.textContent = movie.title;
      releaseEl.textContent = "Released: " + movie.release_date;
      overviewEl.textContent = movie.overview || "";
  

